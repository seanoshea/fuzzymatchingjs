{
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "es2022": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "no-bitwise": "off",
    "prefer-destructuring": "off",
    "no-console": "warn",
    "no-unused-vars": "error",
    "no-var": "error",
    "prefer-const": "error",
    "eqeqeq": "error",
    "curly": "error",
    "no-trailing-spaces": "error",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "max-len": ["error", { "code": 120 }],
    "default-param-last": "off",
    "import/extensions": "off"
  }
}
